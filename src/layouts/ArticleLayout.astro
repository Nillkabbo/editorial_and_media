---
import BaseLayout from './BaseLayout.astro';
import TagPill from '../components/TagPill.astro';
import RelatedPosts from '../components/RelatedPosts.astro';
import SupportCTA from '../components/SupportCTA.astro';

interface Props {
  title: string;
  description: string;
  date: Date;
  author: string;
  tags: string[];
  readingTime?: number;
  collection: 'scholarly' | 'editorial' | 'resources';
  slug: string;
}

const {
  title,
  description,
  date,
  author,
  tags,
  readingTime,
  collection,
  slug,
} = Astro.props;

const formattedDate = date.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});

const collectionPath = collection === 'scholarly' ? '/scholarly' : collection === 'editorial' ? '/editorial' : '/resources';
const collectionName = collection === 'scholarly' ? 'Scholarly' : collection === 'editorial' ? 'Editorial' : 'Resources';

const siteUrl = Astro.site || 'https://www.latecheditorialpublishing.com';
const currentUrl = new URL(`${collectionPath}/${slug}/`, siteUrl).href;
const shareTitle = encodeURIComponent(title);
const shareUrl = encodeURIComponent(currentUrl);
---

<BaseLayout
  title={`${title} | ${collectionName} | LaTech Editorial Publishing`}
  description={description}
  canonical={currentUrl}
  type="article"
  publishedTime={date.toISOString()}
  author={author}
  tags={tags}
>
  <article class="article-layout">
    <div class="article-header">
      <nav class="article-breadcrumb">
        <a href={collectionPath + '/'}>← Back to {collectionName}</a>
      </nav>
      
      <h1 class="article-title">{title}</h1>
      
      <div class="article-meta">
        <div class="article-meta-primary">
          <span class="article-author">By {author}</span>
          <span class="article-separator">•</span>
          <time datetime={date.toISOString()} class="article-date">{formattedDate}</time>
          {readingTime && (
            <>
              <span class="article-separator">•</span>
              <span class="article-reading-time">{readingTime} min read</span>
            </>
          )}
        </div>
        
        <div class="article-tags">
          {tags.map((tag) => (
            <TagPill tag={tag} />
          ))}
        </div>
      </div>
    </div>
    
    <div class="article-content narrow-content">
      <slot />
    </div>
    
    <div class="article-footer narrow-content">
      <section class="article-share">
        <h2 class="article-share-heading">Share this article</h2>
        <div class="article-share-links">
          <a
            href={`https://twitter.com/intent/tweet?text=${shareTitle}&url=${shareUrl}`}
            target="_blank"
            rel="noopener noreferrer"
            class="article-share-link"
            aria-label="Share on Twitter"
          >
            Twitter
          </a>
          <a
            href={`https://www.linkedin.com/sharing/share-offsite/?url=${shareUrl}`}
            target="_blank"
            rel="noopener noreferrer"
            class="article-share-link"
            aria-label="Share on LinkedIn"
          >
            LinkedIn
          </a>
          <a
            href={`mailto:?subject=${shareTitle}&body=${shareUrl}`}
            class="article-share-link"
            aria-label="Share via Email"
          >
            Email
          </a>
        </div>
      </section>
      
      <RelatedPosts
        currentSlug={slug}
        collection={collection}
        tags={tags}
      />
      
      <SupportCTA variant="inline" />
    </div>
  </article>
</BaseLayout>

<style>
  .article-layout {
    padding: var(--spacing-xl) 0 var(--spacing-2xl);
  }
  
  .article-header {
    max-width: var(--max-content-width);
    margin: 0 auto var(--spacing-2xl);
    padding: 0 var(--spacing-lg);
  }
  
  .article-breadcrumb {
    margin-bottom: var(--spacing-lg);
  }
  
  .article-breadcrumb a {
    color: var(--color-text-light);
    font-size: var(--font-size-sm);
    text-decoration: none;
    font-weight: 500;
    transition: color var(--transition-fast);
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-xs);
  }
  
  .article-breadcrumb a:hover {
    color: var(--color-accent);
    text-decoration: none;
  }
  
  .article-title {
    margin-bottom: var(--spacing-lg);
    font-size: clamp(var(--font-size-3xl), 5vw, var(--font-size-5xl));
    line-height: 1.15;
    letter-spacing: -0.03em;
  }
  
  .article-meta {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-lg);
    padding-bottom: var(--spacing-lg);
    border-bottom: 1px solid var(--color-border-light);
  }
  
  .article-meta-primary {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    font-size: var(--font-size-sm);
    color: var(--color-text-light);
    flex-wrap: wrap;
    font-weight: 500;
  }
  
  .article-separator {
    color: var(--color-border-dark);
    opacity: 0.5;
  }
  
  .article-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-xs);
  }
  
  .article-content {
    padding: 0 var(--spacing-lg);
  }
  
  .article-content :global(h2) {
    margin-top: var(--spacing-2xl);
    margin-bottom: var(--spacing-lg);
    padding-top: var(--spacing-lg);
    border-top: 1px solid var(--color-border-light);
  }
  
  .article-content :global(h2:first-of-type) {
    margin-top: 0;
    padding-top: 0;
    border-top: none;
  }
  
  .article-content :global(h3) {
    margin-top: var(--spacing-xl);
    margin-bottom: var(--spacing-md);
  }
  
  .article-content :global(h4) {
    margin-top: var(--spacing-lg);
    margin-bottom: var(--spacing-sm);
  }
  
  .article-content :global(p) {
    margin-bottom: var(--spacing-lg);
    line-height: 1.75;
    font-size: var(--font-size-base);
  }
  
  .article-content :global(ul),
  .article-content :global(ol) {
    margin-bottom: var(--spacing-lg);
    padding-left: var(--spacing-xl);
  }
  
  .article-content :global(li) {
    margin-bottom: var(--spacing-sm);
    line-height: 1.75;
  }
  
  .article-content :global(blockquote) {
    margin: var(--spacing-xl) 0;
    padding-left: var(--spacing-xl);
    border-left: 3px solid var(--color-accent);
    font-style: italic;
    color: var(--color-text-light);
  }
  
  .article-content :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: var(--radius-md);
    margin: var(--spacing-xl) 0;
    box-shadow: var(--shadow-md);
  }
  
  .article-content :global(code) {
    background-color: var(--color-bg-secondary);
    padding: 0.2em 0.4em;
    border-radius: var(--radius-sm);
    font-size: 0.9em;
  }
  
  .article-content :global(pre) {
    background-color: var(--color-bg-secondary);
    padding: var(--spacing-lg);
    border-radius: var(--radius-md);
    overflow-x: auto;
    margin: var(--spacing-xl) 0;
  }
  
  .article-content :global(pre code) {
    background: none;
    padding: 0;
  }
  
  .article-footer {
    padding: 0 var(--spacing-lg);
    margin-top: var(--spacing-3xl);
  }
  
  .article-share {
    padding: var(--spacing-xl) 0;
    border-top: 2px solid var(--color-border);
    border-bottom: 2px solid var(--color-border);
    margin-bottom: var(--spacing-2xl);
  }
  
  .article-share-heading {
    font-size: var(--font-size-lg);
    margin-bottom: var(--spacing-lg);
    color: var(--color-primary);
    font-weight: 600;
  }
  
  .article-share-links {
    display: flex;
    gap: var(--spacing-md);
    flex-wrap: wrap;
  }
  
  .article-share-link {
    color: var(--color-accent);
    text-decoration: none;
    font-weight: 600;
    padding: var(--spacing-sm) var(--spacing-lg);
    border: 2px solid var(--color-accent);
    border-radius: var(--radius-sm);
    transition: all var(--transition-base);
    text-transform: uppercase;
    font-size: var(--font-size-sm);
    letter-spacing: 0.05em;
  }
  
  .article-share-link:hover {
    background-color: var(--color-accent);
    color: var(--color-white);
    transform: translateY(-1px);
    box-shadow: var(--shadow-sm);
  }
  
  .article-share-link:focus-visible {
    outline: 2px solid var(--color-accent);
    outline-offset: 2px;
  }
  
  @media (max-width: 768px) {
    .article-header,
    .article-content,
    .article-footer {
      padding-left: var(--spacing-md);
      padding-right: var(--spacing-md);
    }
    
    .article-title {
      font-size: clamp(var(--font-size-2xl), 6vw, var(--font-size-3xl));
    }
  }
</style>
