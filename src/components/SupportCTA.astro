---
interface Props {
  variant?: 'inline' | 'box' | 'banner';
}

const { variant = 'box' } = Astro.props;
---

<div class={`support-cta support-cta-${variant}`}>
  <h3 class="support-cta-headline">Support Independent Scholarship</h3>
  <p class="support-cta-text">Your contribution helps us publish rigorous research and make knowledge accessible to all.</p>
  <a href="/support/" class="btn btn-primary support-cta-button">Support Our Work</a>
</div>

<style>
  .support-cta {
    text-align: center;
    padding: var(--spacing-lg);
  }
  
  .support-cta-inline {
    padding: var(--spacing-lg) 0;
    border-top: 1px solid var(--color-border-light);
    border-bottom: 1px solid var(--color-border-light);
  }
  
  .support-cta-box {
    background-color: var(--color-white);
    border: 2px solid var(--color-accent);
    border-radius: var(--radius-lg);
    padding: var(--spacing-2xl);
    box-shadow: var(--shadow-md);
    transition: all var(--transition-base);
  }
  
  .support-cta-box:hover {
    box-shadow: var(--shadow-lg);
    transform: translateY(-2px);
  }
  
  .support-cta-banner {
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-light) 100%);
    color: var(--color-white);
    padding: var(--spacing-2xl);
    border-radius: var(--radius-lg);
    position: relative;
    overflow: hidden;
  }
  
  .support-cta-banner::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(circle at 20% 50%, rgba(212, 106, 67, 0.2) 0%, transparent 50%);
    pointer-events: none;
  }
  
  .support-cta-banner .support-cta-headline,
  .support-cta-banner .support-cta-text {
    color: var(--color-white);
    position: relative;
    z-index: 1;
  }
  
  .support-cta-headline {
    margin-top: 0;
    margin-bottom: var(--spacing-md);
    font-size: clamp(var(--font-size-xl), 3vw, var(--font-size-2xl));
    color: var(--color-primary);
    font-family: var(--font-serif);
  }
  
  .support-cta-text {
    margin-bottom: var(--spacing-xl);
    color: var(--color-text);
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
    font-size: var(--font-size-lg);
    line-height: 1.7;
  }
  
  .support-cta-button {
    margin-top: var(--spacing-sm);
  }
  
  .support-cta-banner .support-cta-button {
    background-color: var(--color-white);
    color: var(--color-primary);
    border-color: var(--color-white);
  }
  
  .support-cta-banner .support-cta-button:hover {
    background-color: var(--color-bg);
    border-color: var(--color-bg);
    transform: translateY(-1px);
    box-shadow: var(--shadow-md);
  }
</style>
